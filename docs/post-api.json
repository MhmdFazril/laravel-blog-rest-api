            "get": {
                "description": "Get list or search post",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "name": "author",
                        "in": "query"
                    },
                    {
                        "name": "category",
                        "in": "query"
                    },
                    {
                        "name": "title",
                        "in": "query"
                    },
                    {
                        "name": "slug",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success get all or search post",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "number"
                                                    },
                                                    "title": {
                                                        "type": "string"
                                                    },
                                                    "slug": {
                                                        "type": "string"
                                                    },
                                                    "content": {
                                                        "type": "string"
                                                    },
                                                    "category_id": {
                                                        "type": "number"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "success": {
                                        "value": {
                                            "data": [
                                                {
                                                    "id": 1,
                                                    "title": "olahraga di kota Jakarta",
                                                    "slug": "olahraga-di-kota-jakarta",
                                                    "content": "Lorem ipsum dolor sit amet consectetur adipiscing elit orci curae enim pharetra vehicula, aliquam porttitor mus nisi ne.",
                                                    "category_id": 1,
                                                    "author_id": 1
                                                },
                                                {
                                                    "id": 2,
                                                    "title": "kesenian di kota Jakarta",
