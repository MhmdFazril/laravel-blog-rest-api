{
    "openapi": "3.1.1",
    "info": {
        "title": "Category API",
        "version": "1.0",
        "description": "API for manage category in Blog application."
    },
    "servers": [{ "url": "http://localhost:8000" }],
    "paths": {
        "/api/category": {
            "get": {
                "description": "Get list category",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success get list category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "number"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "success": {
                                        "value": {
                                            "data": [
                                                {
                                                    "id": 1,
                                                    "name": "Olahraga"
                                                },
                                                {
                                                    "id": 2,
                                                    "name": "Kesehatan"
                                                },
                                                {
                                                    "id": 3,
                                                    "name": "Hiburan"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Unauthorized": {
                                        "value": {
                                            "errors": {
                                                "messages": ["unauthorized"]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },

            "post": {
                "description": "Create new category",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["name"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "kesehatan": {
                                    "value": {
                                        "name": "Kesehatan"
                                    }
                                },
                                "Olahraga": {
                                    "value": {
                                        "name": "Olahraga"
                                    }
                                },
                                "Sejarah": {
                                    "value": {
                                        "name": "Sejarah"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success create new category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "success": {
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "name": "Hiburan"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validation errors": {
                                        "value": {
                                            "errors": {
                                                "name": [
                                                    "name must not be blank",
                                                    "name min 6 characters"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Unauthorized": {
                                        "value": {
                                            "errors": {
                                                "messages": ["unauthorized"]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },

