                                "examples": {
                                    "Unauthorized": {
                                        "value": {
                                            "errors": {
                                                "messages": ["unauthorized"]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },

            "put": {
                "description": "Update category by id",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
