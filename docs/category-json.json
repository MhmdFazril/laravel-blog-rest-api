                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["name"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "kesehatan": {
                                    "value": {
                                        "name": "kesehatan"
                                    }
                                },
                                "Olahraga": {
                                    "value": {
                                        "name": "Olahraga"
                                    }
                                },
                                "Sejarah": {
                                    "value": {
                                        "name": "Sejarah"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success update category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
